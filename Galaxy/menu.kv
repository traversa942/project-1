<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0,0,0,.8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: 'C:\\Users\\g202393750\\Documents\\python codes\\Galaxy\\fonts\\Sackers-Gothic-Std-Light.ttf'
        text:root.parent.menu_title
        pos_hint: {"center_x":.5 , "center_y": .6}
    Button:
        font_size: dp(30)
        font_name: 'C:\\Users\\g202393750\\Documents\\python codes\\Galaxy\\fonts\\Eurostile.ttf'
        text: root.parent.menu_button_title
        pos_hint: {"center_x":.5 , "center_y":.3} 
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 1,.3,.4,.85
